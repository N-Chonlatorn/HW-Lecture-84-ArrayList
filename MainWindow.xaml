<Window x:Class="HW_Lecture_84_ArrayList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_Lecture_84_ArrayList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="txtAdd" Content="Add" HorizontalAlignment="Left" Height="55" Margin="106,196,0,0" VerticalAlignment="Top" Width="162" FontSize="20" Click="txtAdd_Text_Click"/>
        <Button x:Name="txtRemove" Content="Remove" HorizontalAlignment="Left" Height="55" Margin="308,196,0,0" VerticalAlignment="Top" Width="162" FontSize="20" Click="txtRemove_Click"/>
        <Button x:Name="txtShow_All" Content="Show All" HorizontalAlignment="Left" Height="55" Margin="504,196,0,0" VerticalAlignment="Top" Width="162" FontSize="20" Click="txtShow_All_Text_Click"/>
        <TextBox x:Name="txtTextbox" HorizontalAlignment="Left" Height="50" Margin="106,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="560" VerticalContentAlignment="Center" FontSize="18" TextChanged="txtTextbox_Text_TextChanged" Text="Please Fill Member Name"/>

    </Grid>
</Window>
